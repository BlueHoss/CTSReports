	<!-- Display selected indicator data -->
	{#if activeIndicator}
		<div class="mt-4 border-t p-4">
			<h2 class="mb-4 text-xl font-bold">{activeIndicator.title}</h2>

			<!-- Status -->
			<div class="mb-4">
				<div class="font-semibold">{activeIndicator.status.title}</div>
				<div>{activeIndicator.status.text}</div>
				<div class="text-sm text-gray-600">{activeIndicator.status.date}</div>
				<div>Class: {activeIndicator.color}</div>
			</div>

			<!-- Flags -->
			{#if activeIndicator.flags}
				<div class="mb-4">
					{#each activeIndicator.flags as flag}
						<div class={flag.color}>
							{flag.header}
						</div>
					{/each}
				</div>
			{/if}

			<!-- Next Steps -->
			{#if activeIndicator.nextSteps}
				<div class="mb-4">
					{#each activeIndicator.nextSteps as step}
						<div class="rounded bg-gray-50 p-2">
							{step.text}
						</div>
					{/each}
				</div>
			{/if}

			<!-- Protocol Info -->
			<div class="mb-4 grid grid-cols-2 gap-2">
				{#each activeIndicator.protocol as item}
					<div>
						<span class="font-semibold">{item.label}:</span>
						<span>{item.value}</span>
					</div>
				{/each}
			</div>

			<!-- Subject Info -->
			<div class="grid grid-cols-2 gap-2">
				{#each activeIndicator.subject as item}
					<div>
						<span class="font-semibold">{item.label}:</span>
						<span>{item.value}</span>
					</div>
				{/each}
			</div>
		</div>
	{/if}